# Create own window instead of using desktop (required in nautilus)
own_window yes
#own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 0
own_window_transparent yes
own_window_colour FFFFCC
#background no

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# fiddle with window
use_spacer yes
use_xft yes

xftfont 方正准园_GBK:size=10

# Update interval in seconds
update_interval 3.0

#Maximum Width of Window
maximum_width 320

# Minimum size of text area
# minimum_size 250 5

# Draw shades?
draw_shades no

# Text stuff
draw_outline no # amplifies text if yes
draw_borders no
uppercase no # set to yes if you want all text to be in uppercase

# Stippled borders?
stippled_borders 3

# border margins
#border_margin 5

# border width
border_width 6

# Default colors and also border colors, grey90 == #e5e5e5
default_color 66ccff


# Text alignment, other possible values are commented
#alignment top_left
#alignment top_right
#alignment bottom_left
alignment bottom_right

# Gap between borders of screen and text
gap_x 10
gap_y 10

# stuff after 鈥楾EXT鈥� will be formatted on screen

TEXT
$color
${color CC9900}${exec echo '这里是上条当麻保护协会'} ${hr 2}$color
I'll be here forever

${color CC9900}SYSTEM ${hr 2}$color
$nodename $sysname $kernel on $machine

${color CC9900}CPU ${hr 2}$color
Total CPU: ${cpu cpu0}%
${color 597DB2}${cpubar}$color
${cpugraph 000000 597DB2}
Core 1: ${freq 1} MHz        Temprature: $color ${exec sensors|grep 'Core 0'|awk '{print $3}'}
${cpu cpu1}% ${color 597DB2}${cpubar cpu1}$color
Core 2: ${freq 2} MHz        Temprature: $color ${exec sensors|grep 'Core 1'|awk '{print $3}'}
${cpu cpu2}% ${color 597DB2}${cpubar cpu2}$color

NAME               PID   CPU%   MEM%
${color CCFFFF}${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}$color

${color CC9900}MEMORY ${hr 2}$color
RAM Used: ${mem}    RAM Free: ${memfree}/ ${memmax}
 RAM: $memperc%  ${color FF6600} ${membar 6}$color
Swap: $swapperc%   ${color FF6600} ${swapbar 6}$color

${color CC9900}DISK ${hr 2}$color
${diskiograph 000000 597DB2}
NAME  Type   Read    Write ${alignr}USED(%)
${color FFFF33}\
Root ${fs_type /}: ${diskio_read /dev/sda6} ${diskio_write /dev/sda6} \
${alignr}${fs_used /}(${fs_used_perc /}%)
${fs_bar /}
${color FFFF33}Home   ${fs_type /home}: ${diskio_read /dev/sda8} ${diskio_write /dev/sda8} \
${alignr}${fs_used /home}(${fs_used_perc /home}%)
${fs_bar /home}\
$color
#eth1
${if_up eth1}\
${color CC9900}NETWORK (${addr eth1}) ${hr 2}$color
Down: $color${downspeed eth1} ${alignr}Up: ${upspeed eth1}
${downspeedgraph eth1 25,140 000000 ff0000} ${alignr}${upspeedgraph eth1
25,140 000000 00ff00}$color
Total: ${totaldown eth1} ${alignr}Total: ${totalup eth1}
Inbound: ${tcp_portmon 1 32767 count} Outbound: ${tcp_portmon 32768
61000 count}${alignr}Total: ${tcp_portmon 1 65535 count}\
${endif}
# eth2
${if_up eth2}\
${color CC9900}NETWORK (${addr eth2}) ${hr 2}$color
Down: $color${downspeed eth2} ${alignr}Up: ${upspeed eth2}
${downspeedgraph eth2 25,140 000000 ff0000} ${alignr}${upspeedgraph eth2
25,140 000000 00ff00}$color
Total: ${totaldown eth2} ${alignr}Total: ${totalup eth2}
Inbound: ${tcp_portmon 1 32767 count} Outbound: ${tcp_portmon 32768
61000 count}${alignr}Total: ${tcp_portmon 1 65535 count}\
${endif}
# eth3
${if_up eth3}\
${color CC9900}NETWORK (${addr eth3}) ${hr 2}$color
Down: $color${downspeed eth3} ${alignr}Up: ${upspeed eth3}
${downspeedgraph eth3 25,140 000000 ff0000} ${alignr}${upspeedgraph eth3
25,140 000000 00ff00}$color
Total: ${totaldown eth3} ${alignr}Total: ${totalup eth3}
Inbound: ${tcp_portmon 1 32767 count} Outbound: ${tcp_portmon 32768
61000 count}${alignr}Total: ${tcp_portmon 1 65535 count}\
${endif}
# LOGGINE
${color CC9900}LOGGING ${hr 2}$color
${color 339900}${execi 30 tail -n3 /var/log/messages | fold -w50}$color

