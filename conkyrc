# 字体以及大小设置
xftfont Draid Sans Mono:size=10

#
# 整体布局排版
#

# 防止闪烁
double_buffer yes

# 刷新时间(s)
update_interval 1

# 界面大小
maximum_width 320
minimum_size 320 5

background yes

# 外边距
gap_x 10
gap_y 10

# aligment
#alignment top_left
alignment top_right
#alignment bottom_left
#alignment bottom_right

#
# own_window设置
#

# 打开own_window
own_window yes

# 默认为normal
#own_window_tyoe override

own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# 打开透明效果
own_window_argb_visual yes
#own_window_argb_value 0
own_window_transparent yes

# 关闭透明效果时own_window的颜色
own_window_colour FFFFCC

